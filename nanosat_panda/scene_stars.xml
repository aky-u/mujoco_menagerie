<mujoco model="panda scene">
  <include file="nanosat_panda.xml"/>

  <statistic center="0.3 0 0.4" extent="1"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="120" elevation="-20"/>
    <map znear="0.01" zfar="1000"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="starfield" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="1000" height="1000"/>
    <material name="starfield" texture="starfield" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
    <mesh name="inverted_sphere" file="inverted_sphere.obj" scale="1 1 1"/>
  </asset>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    <geom name="background" pos="0 0 0" type="mesh" mesh="inverted_sphere" material="starfield" contype="0" conaffinity="0" group="2"/>
  </worldbody>
</mujoco>
